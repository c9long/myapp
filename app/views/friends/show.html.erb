<div class="p-5 mb-4 rounded-3" style="--bs-bg-opacity: 1; background-color: rgba(var(--bs-tertiary-bg-rgb), var(--bs-bg-opacity)) !important;">
  <div class="container-fluid py-5">
    <h1 class="display-5 fw-bold"><%= @friend.first_name%> <%=@friend.last_name %></h1>
    <p class="col-md-8 fs-4"><%= @friend.email %> | <%=@friend.phone %> | <%=@friend.twitter %></p>
    <br/>
    <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-secondary" %>
    <%= link_to "Delete" , @friend, method: :delete, data: {
      confirm: "Are you sure you want to delete this friend?" }, class: "btn btn-outline-danger" %>
    <%= link_to "Back", friends_path, class:"btn btn-secondary" %>
  </div>
</div>
