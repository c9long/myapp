<% content_for :title, "Friends" %>

<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.first_name %> <%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= link_to "Show", friend %></td>
        <td><%= link_to "Edit", edit_friend_path(friend) %></td>
        <td><%= link_to "Destroy", friend, method: :delete, data: { confirm: "Are you sure you want to destroy this friend?"}  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Friend', new_friend_path, class: "btn btn-secondary" %>
